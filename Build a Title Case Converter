//Build a Title Case Converter

function titleCase(str){
  str = str.toLowerCase();

  let words = str.split(" ");

  for(let i = 0; i < words.length; i++){
    words[i] = words[i][0].toUpperCase() + words[i].slice(1);
  }

  return words.join(" ");
}

console.log(titleCase("I like to code"));
// I Like To Code

console.log(titleCase("javaScript is fun"));
// Javascript Is Fun
